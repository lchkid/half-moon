/* components/hm-good/hm-good.wxss */
.good-item {
  display: flex;

  padding: 10rpx;
  border-bottom: 2rpx solid #eeeeee;
}

.gi-img {
  width: 300rpx;
  height: 300rpx;
}

.gi-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;

  padding: 20rpx;
  font-size: 30rpx;
}

.gi-title {
  font-size: 36rpx;
  font-weight: 600;
}

.gi-desc {
  font-size: 24rpx;
  margin-top: 6rpx;
}

.gi-price {
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
}

.gi-sell {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
}